---
// @ts-ignore
import { Icon } from "astro-icon";

const ServerlessCMS = {
  HowItWorks: {
    title: "How It Works",
    description:
      "From idea to launch, we provide the tools to shape, enhance and control your project.",
    steps: [
      {
        title: "Share Your Idea",
        description:
          "Start by sharing your project idea with us. We automatically provide you with a Free plan to start.",
        icon: "bx:bxs-window-alt",
      },
      {
        title: "Meet Your AI Team",
        description:
          "Upon signup, your AI team is ready to assist in all design and development tasks. Upgrade your plan anytime.",
        icon: "bx:bxs-group",
      },
      {
        title: "Improve, Test, Iterate",
        description:
          "Ask your AI team to continually refine your project. From fixing texts to adding new features, it's all about achieving the best version.",
        icon: "bx:bxs-rocket",
      },
    ],
    buttonText: "Launch Your Project Today",
  },
};
---

<section class="py-24 bg-white dark:bg-gray-900 overflow-hidden">
  <div class="container px-4 mx-auto">
    <div class="max-w-xl text-center mx-auto mb-20">
      <h2
        class="dark:text-white text-4xl lg:text-5xl font-bold lg:tracking-tight">
        {ServerlessCMS.HowItWorks.title}
      </h2>
      <p class="text-lg mt-4 text-slate-600 dark:text-gray-300">
        {ServerlessCMS.HowItWorks.description}
      </p>
    </div>
    <div class="flex flex-wrap -m-7 mb-14">
      {
        ServerlessCMS.HowItWorks.steps.map(
          (step) =>
            !console.log(step.icon) && (
              <div class="w-full md:w-1/3 p-7">
                <div class="max-w-xs">
                  <div class="mb-10">
                    <Icon
                      class="text-black dark:text-white w-10 h-10"
                      name={step.icon}
                    />
                  </div>
                  <h3 class="mb-4 text-xl font-semibold tracking-tight text-gray-900 dark:text-gray-100">
                    {step.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 tracking-tight">
                    {step.description}
                  </p>
                </div>
              </div>
            )
        )
      }
    </div>
    <div class="flex flex-row justify-center">
      <a
        class="inline-block mx-auto px-5 py-4 text-white font-semibold tracking-tight bg-indigo-500 hover:bg-indigo-600 rounded-lg focus:ring-4 focus:ring-indigo-300 transition duration-200"
        href="/play">{ServerlessCMS.HowItWorks.buttonText}</a
      >
    </div>
  </div>
</section>
